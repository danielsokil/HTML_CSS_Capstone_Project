  "scripts": {
    "postinstall": "go get -u github.com/cortesi/devd/cmd/devd",
    "start": "devd --livewatch --quiet --notfound=index.html --port=1234 source/",
    "validate": "concurrently --kill-others \"npm:start\" \"npm:validateCSS\" \"sleep 1s && npm run validateHTML\"",
    "validateCSS": "stylelint source/**/*.css",
    "validateHTML": "node ./tools/validateSite.js"
  },
  "devDependencies": {
    "chrome-finder": "^1.0.7",
    "concurrently": "^5.2.0",
    "html-validator": "^5.1.14",
    "puppeteer-core": "^3.1.0",
    "sirv-cli": "^1.0.0-next.5",
    "stylelint": "^13.5.0",
    "stylelint-config-recommended": "^3.0.0"
  }
}
